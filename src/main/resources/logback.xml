<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
            <pattern>
                    %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %level %logger - %msg%n
            </pattern>
      </encoder>
  </appender>

  <logger name="com.github" level="all" />
        
  <root level="INFO">
      <appender-ref ref="stdout"/>
  </root>

</configuration>
